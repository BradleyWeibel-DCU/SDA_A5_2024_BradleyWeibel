<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    tools:context=".EditSongActivity">

    <ImageView
        android:id="@+id/idImgLyricist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/solar_eclipse_image"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idImgLyricist"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/highlighted_text_orange"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/idImgLyricist" />

    <TextView
        android:id="@+id/idTxtSongOrVersionName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/idTxtWarning"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/song_name"
        android:textColor="@color/highlighted_text_yellow"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTxtWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="@string/delete_song_warning"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idBtnDelete"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_below="@+id/idTxtWarning"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:clickable="true"
        android:contentDescription="@string/delete"
        android:scaleType="center"
        app:fabCustomSize="58dp"
        app:maxImageSize="41dp"
        app:srcCompat="@drawable/delete_explosion_icon_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idBtnBackToSongAndVersions"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:clickable="true"
        android:contentDescription="@string/back"
        android:scaleType="center"
        app:maxImageSize="47dp"
        app:srcCompat="@drawable/back_arrow_icon_black"
        app:backgroundTint="@color/back_button"/>

</RelativeLayout>
