<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    tools:context=".AddSongActivity">

    <ImageView
        android:id="@+id/lyricistImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/solar_eclipse_image"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyricistImage"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/highlighted_text_orange"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/lyricistImage" />

    <EditText
        android:id="@+id/idEdtSongName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_text_shape_orange"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textColor="@color/highlighted_text_yellow"
        android:gravity="center"
        android:hint="@string/song_name"
        android:textColorHint="@color/standard_text_dark_grey" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idBtnNext"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="19dp"
        android:clickable="true"
        android:contentDescription="@string/next"
        app:backgroundTint="@color/back_button"
        app:fabCustomSize="57dp"
        android:scaleType="center"
        app:maxImageSize="45dp"
        app:srcCompat="@drawable/confirm_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idBtnBackToHome"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:clickable="true"
        android:contentDescription="@string/back_to_home"
        android:scaleType="center"
        app:maxImageSize="32dp"
        app:srcCompat="@drawable/back_arrow_icon"
        app:backgroundTint="@color/back_button"/>

</RelativeLayout>
